<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/aluno_list_thumbnail"
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/thumbnail"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/recipe_list_text_layout"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/aluno_list_thumbnail"
        android:layout_toStartOf="@id/recipe_list_detail">

        <TextView
            android:id="@+id/aluno_list_nome"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            tools:text="Nome" />

        <TextView
            android:id="@+id/raluno_list_matricula"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="18sp"
            tools:text="Matricula" />

    </RelativeLayout>
</RelativeLayout>
